PROMPT 0
NOESCAPE 0
ALLOWOPTIONS 0
TIMEOUT 100

### TUI
DEFAULT menu.c32

### GUI
#UI vesamenu.c32
# The splash.png file is a PNG image with resolution of 640x480 px
#MENU BACKGROUND splash.png

MENU TITLE ---===[ Boot Menu ]===---

LABEL local
  MENU DEFAULT
  MENU LABEL ^1. Boot from hard drive
  COM32 chain.c32
  APPEND hd0

LABEL centos7-basic
  MENU LABEL ^2. CentOS 7 Install
  KERNEL vmlinuz
  APPEND initrd=initrd.img inst.ks=ftp://172.16.1.1/kickstart/centos7-ks.cfg ip=enp0s3:dhcp bootdev=enp0s3 ipv6.disable=1 inst.noninteractive inst.text

END
